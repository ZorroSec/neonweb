<div class="container">
  {{#each posts}}
    <div class="card">
      <div class="card-title">
        <div class="titulo">
          {{titulo}}
        </div>
      </div>
      <div class="card-body">
        <div class="card-text">
          <div class="data__post">
            {{data}}
          </div>
          <div class="username">
            {{nome}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>